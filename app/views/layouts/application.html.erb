<!DOCTYPE html>
<html>
  <head>
    <title>TutorApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
      <h2><% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %></h2>
      <% end %>
    <%= yield %>
  </body>
</html>
